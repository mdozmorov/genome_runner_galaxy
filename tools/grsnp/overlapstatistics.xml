<tool id="grsnp_overlapstatistics" name="GenomeRunner Overlap Statistics" workflow_compatible="false">
	<description>Calculates the overlap statistics</description>
	<command>
		overlapStatistics
		$gf 
		#for $f in $fois
			${f.foi}
		#end for > $output		
	</command>
	<inputs>
		<param name="gf" value="" type="data" label="Genomic Feature" format="bed"/>
		<repeat name="fois" title="SNPs of Interest">
			<param name="foi" value="" type="data" format="bed" label="SNP file"/>
		</repeat>
	</inputs>
	<outputs>
		<data format="tabular" name="output"></data>
	</outputs>

	<tests>
		<test>
			
		</test>
	</tests>
	<help>Calculates the overlap statistics of a Genomic Feature (bed file) against multiple Features of interest files (bed files)</help>
</tool>